<Project>

  <!--
    Directory.Build.props is automatically picked up and imported by Microsoft.Common.props
    This file needs to exist, even if empty, so that files in the parent directory tree, with the same name, are not imported instead.
    The import happens fairly early, so most properties will not be set before we define them below.
  -->

  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyOriginatorKeyFile>$(MSBuildThisFileDirectory)TerraFX.snk</AssemblyOriginatorKeyFile>
    <Authors>Tanner Gooding and Contributors</Authors>
    <Company>TerraFX</Company>
    <Copyright>Copyright © Tanner Gooding and Contributors</Copyright>
    <Description>A framework for developing multimedia-based applications.</Description>
    <EnableDefaultNoneItems>false</EnableDefaultNoneItems>
    <Features>strict</Features>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <HighEntropyVA>true</HighEntropyVA>
    <LangVersion>latest</LangVersion>
    <NeutralLanguage>en-US</NeutralLanguage>
    <OverwriteReadOnlyFiles>true</OverwriteReadOnlyFiles>
    <PackageLicenseUrl>https://github.com/tannergooding/terrafx/blob/master/License.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/tannergooding/terrafx</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
    <Product>TerraFX</Product>
    <PublicSign>true</PublicSign>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/tannergooding/terrafx</RepositoryUrl>
    <SignAssembly>true</SignAssembly>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <UseSharedCompilation>true</UseSharedCompilation>
    <VersionPrefix>0.1.0</VersionPrefix>
    <VersionSuffix>alpha</VersionSuffix>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Net.Compilers" Version="2.4.0" />
    <PackageReference Include="System.Collections.Immutable" Version="1.4.0" />
    <PackageReference Include="System.Composition" Version="1.1.0" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.4.0" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.4.0" />
  </ItemGroup>

</Project>
